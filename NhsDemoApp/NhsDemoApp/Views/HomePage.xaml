<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NhsDemoApp.Views.HomePage"
             xmlns:vm="clr-namespace:NhsDemoApp.ViewModels"
             xmlns:model="clr-namespace:NhsDemoApp.Models"  
             Title="{Binding Title}">

    <RefreshView x:DataType="vm:HomeViewModel" Command="{Binding LoadUserSettings}" IsRefreshing="{Binding IsBusy, Mode=TwoWay}">
        <StackLayout Orientation="Vertical" Padding="30,24,30,24">
            <Label Text="NHS Demo App" FontSize="Title"/>
            <Label Text="Amend the data below to change excel output. Changing the App Time will help demonstrate event triggers for appointments which have not been completed yet but are past due." FontSize="16" Padding="0,0,0,10"/>
            <Label Text="First Name:" FontSize="Subtitle" />
            <Entry Text="{Binding FirstName}" FontSize="Small"/>
            <Label Text="Last Name:" FontSize="Subtitle" />
            <Entry Text="{Binding LastName}" FontSize="Small"/>
            <Label Text="Organisation:" FontSize="Subtitle" />
            <Entry Text="{Binding Organisation}" FontSize="Small"/>
            <Label Text="App Time:" FontSize="Subtitle" />
            <TimePicker Time="{Binding CurrentTime}" Format="t" FontSize="Small"/>
        </StackLayout>
    </RefreshView>
</ContentPage>