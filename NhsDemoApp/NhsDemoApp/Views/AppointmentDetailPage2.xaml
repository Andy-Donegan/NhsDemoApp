<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NhsDemoApp.Views.AppointmentDetailPage2"
             xmlns:local="clr-namespace:NhsDemoApp.ViewModels"  
             xmlns:model="clr-namespace:NhsDemoApp.Models"  
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15" >
        <Label Text="DueTime:" FontSize="Medium" />
        <Label Text="{Binding DueTime, StringFormat='Due Time : {0:H\\:mm}'}" FontSize="Small"/>
        <Label Text="Contact:" FontSize="Medium" />
        <Label Text="{Binding Contact}" FontSize="Small"/>
        <Label Text="Complete:" FontSize="Medium" />
        <Label Text="{Binding IsCompleted}" FontSize="Small"/>
        <Label Text="Arrival Time" FontSize="Medium" />
        <TimePicker Time="{Binding ArrivalTime}" Format="t" FontSize="Small"/>
        <Label Text="Departure Time" FontSize="Medium" />
        <TimePicker Time="{Binding DepartureTime}" Format="t" FontSize="Small"/>
    </StackLayout>

</ContentPage>