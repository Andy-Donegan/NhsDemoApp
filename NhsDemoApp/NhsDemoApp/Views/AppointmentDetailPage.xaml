<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NhsDemoApp.Views.AppointmentDetailPage"
             Title="{Binding Title}">

    <StackLayout Spacing="20" Padding="15">
        <Label Text="DueTime:" FontSize="Medium" />
        <Label Text="{Binding DueTime, StringFormat='Due Time : {0:H\\:mm}'}" FontSize="Small"/>
        <Label Text="Contact:" FontSize="Medium" />
        <Label Text="{Binding Contact}" FontSize="Small"/>
        <Label Text="Complete:" FontSize="Medium" />
        <Label Text="{Binding IsCompleted}" FontSize="Small"/>
        <TimePicker Time="09:00"
                    Format="T"/>
    </StackLayout>

</ContentPage>